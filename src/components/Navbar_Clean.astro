  .logo-container {
    width: 5rem; /* 20 en desktop - tamaño normal del contenedor */
    height: 5rem;
  }
  
  .logo-container svg {
    width: 11rem !important; /* 44 - SVG un poco más grande */
    height: 11rem !important;
  }
}

/* Prevent any menu duplication or conflicts */
#main-header {
  isolation: isolate;
}

/* Mobile menu container - completely hidden by default */
#mobile-menu-container {
  isolation: isolate;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
}

/* When mobile menu is active, show container */
#mobile-menu-container.active {
  z-index: 40;
  pointer-events: auto;
  display: block !important;
}

/* Navbar Background with Glass Effect */
#main-nav {
  background: rgba(20, 20, 20, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

/* Mobile menu strict positioning and visibility */
#mobile-menu {
  box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
  border-left: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 50;
}

#mobile-menu-overlay {
  backdrop-filter: blur(8px);
  z-index: 40;
}

/* Force hidden state when closed */
#mobile-menu.translate-x-full {
  transform: translateX(100%) !important;
  pointer-events: none !important;
  visibility: hidden !important;
}

#mobile-menu:not(.translate-x-full) {
  transform: translateX(0) !important;
  pointer-events: auto !important;
  visibility: visible !important;
}

#mobile-menu-overlay.opacity-0 {
  opacity: 0 !important;
  pointer-events: none !important;
  visibility: hidden !important;
}

#mobile-menu-overlay:not(.opacity-0) {
  opacity: 1 !important;
  pointer-events: auto !important;
  visibility: visible !important;
}

/* Hide mobile menu on desktop completely */
@media (min-width: 768px) {
  #mobile-menu-container {
    display: none !important;
  }
}

/* Desktop nav link effects */
.nav-link {
  position: relative;
  overflow: hidden;
}

.nav-link::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0%;
