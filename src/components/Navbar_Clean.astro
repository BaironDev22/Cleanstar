<script>
// Initialize navbar without GSAP to avoid errors
let navbarInitialized = false;

document.addEventListener('DOMContentLoaded', () => {
  // Prevent multiple initializations
  if (navbarInitialized) {
    return;
  }
  navbarInitialized = true;

  // Remove any duplicate mobile menu containers
  const mobileMenuContainers = document.querySelectorAll('#mobile-menu-container');
  if (mobileMenuContainers.length > 1) {
    for (let i = 1; i < mobileMenuContainers.length; i++) {
      mobileMenuContainers[i].remove();
    }
  }

  // Ensure mobile menu is hidden initially
  const mobileMenuContainer = document.getElementById('mobile-menu-container');
  if (mobileMenuContainer) {
    mobileMenuContainer.style.display = 'none';
    mobileMenuContainer.classList.remove('active');
  }

  initMobileMenu();
  initSmoothScroll();
  initNavbarScroll();
});

// Mobile Menu Functions
function initMobileMenu() {
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  const mobileMenuContainer = document.getElementById('mobile-menu-container');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

  // Ensure elements exist
  if (!mobileMenuButton || !mobileMenu || !mobileMenuOverlay || !mobileMenuContainer) {
    return;
  }

  function openMobileMenu() {
    // Prevent body scroll
    document.body.style.overflow = 'hidden';
    
    // Show container first
    if (mobileMenuContainer) {
      mobileMenuContainer.classList.add('active');
      mobileMenuContainer.style.display = 'block';
    }
    
    // Update states
    if (mobileMenuButton) {
      mobileMenuButton.classList.add('active');
    }
    if (mobileMenu) {
      mobileMenu.classList.remove('translate-x-full');
    }
    if (mobileMenuOverlay) {
      mobileMenuOverlay.classList.remove('opacity-0', 'invisible');
    }
    
    // Force styles
    if (mobileMenuOverlay) {
      mobileMenuOverlay.style.pointerEvents = 'auto';
      mobileMenuOverlay.style.visibility = 'visible';
    }
    if (mobileMenu) {
      mobileMenu.style.pointerEvents = 'auto';
      mobileMenu.style.visibility = 'visible';
    }
    
    // Animate mobile menu items using CSS transitions
    const menuItems = document.querySelectorAll('.mobile-nav-links li');
    if (menuItems.length > 0) {
      menuItems.forEach((item, index) => {
        setTimeout(() => {
          (item as HTMLElement).style.opacity = '1';
          (item as HTMLElement).style.transform = 'translateX(0)';
        }, index * 100 + 200);
      });
    }
    
    const socialIcons = document.querySelectorAll('.mobile-social-icons .social-icon');
    if (socialIcons.length > 0) {
      socialIcons.forEach((icon, index) => {
        setTimeout(() => {
          (icon as HTMLElement).style.opacity = '1';
          (icon as HTMLElement).style.transform = 'scale(1)';
        }, index * 100 + 600);
      });
    }
  }

  function closeMobileMenu() {
    // Restore body scroll
    document.body.style.overflow = '';
    
    // Update states immediately and simply
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('mobile-menu-overlay');
    const container = document.getElementById('mobile-menu-container');
    
    if (button) button.classList.remove('active');
    if (menu) menu.classList.add('translate-x-full');
    if (overlay) overlay.classList.add('opacity-0', 'invisible');
    
    // Hide container
    setTimeout(() => {
      if (container) {
        container.classList.remove('active');
        container.style.display = 'none';
      }
    }, 300);
  }

  // Event listeners
  if (mobileMenuButton) {
    mobileMenuButton.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      openMobileMenu();
    });
  }
  
  // Simplified close button event
  if (mobileMenuClose) {
    mobileMenuClose.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      closeMobileMenu();
    });
  }
  
  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      closeMobileMenu();
    });
  }

  // Close menu when clicking nav links
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      closeMobileMenu();
    });
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeMobileMenu();
    }
  });

  // Close menu on resize to desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      closeMobileMenu();
    }
  });

  // Initial state cleanup - ensure menu is hidden
  closeMobileMenu();
}

// Smooth scroll for navigation links
function initSmoothScroll() {
  const navLinks = document.querySelectorAll('a[href^="#"]');
  
  navLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href')?.substring(1);
      const targetElement = document.getElementById(targetId || '');
      
      if (targetElement) {
        const targetY = targetElement.offsetTop - 80;
        window.scrollTo({
          top: targetY,
          behavior: 'smooth'
        });
      }
    });
  });
}

// Navbar scroll effect
function initNavbarScroll() {
  const navbar = document.querySelector('#main-nav');
  if (!navbar) return;

  function updateNavbar() {
    const scrollY = window.scrollY;
    
    if (scrollY > 100) {
      if (navbar) {
        navbar.classList.add('navbar-scrolled');
      }
    } else {
      if (navbar) {
        navbar.classList.remove('navbar-scrolled');
      }
    }
  }

  window.addEventListener('scroll', updateNavbar);
  
  // Initial call
  updateNavbar();
}
