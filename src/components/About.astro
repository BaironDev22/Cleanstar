<section id="nosotros" class="py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 75% 75%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="about-content">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 about-title text-white">
          ¿Quiénes Somos?
        </h2>
        <div class="space-y-6 text-lg leading-relaxed about-text" style="color: var(--color6)">
          <p class="about-paragraph">
            En <strong style="color: var(--color4)">Cleanstar Detailing</strong>, nos dedicamos a 
            <span style="color: var(--color3)" class="font-semibold">cuidar y proteger</span> la pintura de tu vehículo con 
            <span style="color: var(--color2)" class="font-semibold">técnicas adecuadas</span> y productos de la más alta calidad.
          </p>
          <p class="about-paragraph">
            Nuestra <span style="color: var(--color4)" class="font-semibold">pasión</span> es devolverle el 
            <span style="color: var(--color1)" class="font-semibold">brillo y la apariencia de nuevo</span> a tu auto. 
            Cada servicio que realizamos está respaldado por años de 
            <span style="color: var(--color3)" class="font-semibold">experiencia</span> y un compromiso inquebrantable con la 
            <span style="color: var(--color2)" class="font-semibold">excelencia</span>.
          </p>
          <p class="about-paragraph">
            Nos encontramos en <strong style="color: var(--color4)">Villa Alemana, Región de Valparaíso</strong>, 
            donde atendemos a clientes de toda la región con servicios 
            <span style="color: var(--color1)" class="font-semibold">personalizados</span> y de 
            <span style="color: var(--color3)" class="font-semibold">calidad superior</span>.
          </p>
        </div>

        <!-- Features -->
        <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4 about-features">
          <div class="flex items-center gap-3 feature-item">
            <div class="w-8 h-8 rounded-full flex items-center justify-center feature-icon" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color4) 100%)">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-white font-medium">Técnicas Profesionales</span>
          </div>
          <div class="flex items-center gap-3 feature-item">
            <div class="w-8 h-8 rounded-full flex items-center justify-center feature-icon" style="background: linear-gradient(135deg, var(--color2) 0%, var(--color3) 100%)">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-white font-medium">Productos Premium</span>
          </div>
          <div class="flex items-center gap-3 feature-item">
            <div class="w-8 h-8 rounded-full flex items-center justify-center feature-icon" style="background: linear-gradient(135deg, var(--color3) 0%, var(--color1) 100%)">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-white font-medium">Atención Personalizada</span>
          </div>
          <div class="flex items-center gap-3 feature-item">
            <div class="w-8 h-8 rounded-full flex items-center justify-center feature-icon" style="background: linear-gradient(135deg, var(--color4) 0%, var(--color2) 100%)">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-white font-medium">Garantía de Satisfacción</span>
          </div>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="about-image">
        <div class="relative">
          <!-- Placeholder for car detailing image -->
          <div class="aspect-w-4 aspect-h-3 bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl overflow-hidden shadow-xl main-visual">
            <div class="w-full h-96 flex items-center justify-center" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color2) 100%)">
              <div class="text-center text-white visual-content">
                <svg class="w-20 h-20 mx-auto mb-4 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M4 9V7a6 6 0 1112 0v2h1a2 2 0 012 2v5a2 2 0 01-2 2H3a2 2 0 01-2-2v-5a2 2 0 012-2h1zm8-2v2H8V7a4 4 0 118 0z"/>
                </svg>
                <p class="text-lg font-medium">Cuidado Profesional</p>
                <p class="text-sm opacity-80">Para tu vehículo</p>
              </div>
            </div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 rounded-full opacity-20 decorative-element" style="background-color: var(--color3)"></div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 rounded-full opacity-20 decorative-element" style="background-color: var(--color2)"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // About section animations
    const aboutTl = gsap.timeline({
      scrollTrigger: {
        trigger: '#nosotros',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      }
    });

    // Title animation
    aboutTl.fromTo('.about-title', 
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 0.8, ease: "power2.out" }
    )
    // Text paragraphs with stagger
    .fromTo('.about-paragraph', 
      { opacity: 0, y: 30 },
      { 
        opacity: 1, 
        y: 0, 
        duration: 0.6, 
        stagger: 0.2, 
        ease: "power2.out" 
      }, "-=0.4"
    )
    // Feature items animation
    .fromTo('.feature-item', 
      { opacity: 0, x: -30, scale: 0.9 },
      { 
        opacity: 1, 
        x: 0, 
        scale: 1, 
        duration: 0.5, 
        stagger: 0.1, 
        ease: "back.out(1.7)" 
      }, "-=0.2"
    )
    // Image animation
    .fromTo('.main-visual', 
      { opacity: 0, scale: 0.9, rotationY: 15 },
      { 
        opacity: 1, 
        scale: 1, 
        rotationY: 0, 
        duration: 0.8, 
        ease: "power2.out" 
      }, "-=0.6"
    );

    // Decorative elements floating animation
    gsap.utils.toArray('.decorative-element').forEach((element: any, index: number) => {
      gsap.to(element, {
        y: -10,
        x: index % 2 === 0 ? -5 : 5,
        duration: 4 + index,
        ease: "power1.inOut",
        yoyo: true,
        repeat: -1,
        delay: index * 0.5
      });
    });

    // Feature icons hover animations
    gsap.utils.toArray('.feature-icon').forEach((icon: any) => {
      const iconElement = icon as HTMLElement;
      
      iconElement.addEventListener('mouseenter', () => {
        gsap.to(icon, { 
          scale: 1.2, 
          rotation: 360, 
          duration: 0.4, 
          ease: "back.out(1.7)" 
        });
      });
      
      iconElement.addEventListener('mouseleave', () => {
        gsap.to(icon, { 
          scale: 1, 
          rotation: 0, 
          duration: 0.3, 
          ease: "power2.out" 
        });
      });
    });

    // Parallax effect for the visual content
    gsap.to('.visual-content', {
      y: -20,
      ease: "none",
      scrollTrigger: {
        trigger: '.about-image',
        start: "top bottom",
        end: "bottom top",
        scrub: true
      }
    });
  });
</script>
