<script>
  document.addEventListener('DOMContentLoaded', function() {
    const whatsappButton = document.querySelector('.whatsapp-float') as HTMLElement;
    
    if (whatsappButton) {
      let hasAnimated = false;
      let hasInteracted = false;
      
      // Detect if device is mobile
      const isMobile = window.innerWidth <= 768 || 'ontouchstart' in window;
      
      // Reduce animation delay on mobile for better UX
      const animationDelay = isMobile ? 15000 : 20000; // 15s on mobile, 20s on desktop
      
      // Gentle attention animation after user has been on page
      setTimeout(() => {
        if (!hasAnimated && !hasInteracted) {
          whatsappButton.style.animation = 'cleanstar-pulse 1.2s ease-in-out';
          hasAnimated = true;
          
          // Remove animation after it completes
          setTimeout(() => {
            whatsappButton.style.animation = '';
          }, 1200);
        }
      }, animationDelay);
      
      // Mark as interacted when user hovers or touches
      whatsappButton.addEventListener('mouseenter', () => {
        hasInteracted = true;
      });
      
      // Touch interaction for mobile
      whatsappButton.addEventListener('touchstart', () => {
        hasInteracted = true;
      });
      
      // Track scroll interaction with different threshold for mobile
      let scrollThreshold = false;
      const scrollLimit = isMobile ? 300 : 500; // Lower threshold on mobile
      
      window.addEventListener('scroll', () => {
        if (window.scrollY > scrollLimit && !scrollThreshold) {
          scrollThreshold = true;
          hasInteracted = true;
        }
      });
      
      // Add click tracking for analytics
      whatsappButton.addEventListener('click', () => {
        console.log('WhatsApp clicked - Cleanstar Detailing');
        // Optional: Add analytics tracking here
      });
      
      // Handle orientation change on mobile
      if (isMobile) {
        window.addEventListener('orientationchange', () => {
          setTimeout(() => {
            // Recalculate position if needed after orientation change
            whatsappButton.style.opacity = '0.9';
          }, 100);
        });
      }
    }
  });
</script>

<style>
  .whatsapp-float {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 50;
    opacity: 0.9;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  
  .whatsapp-float:hover {
    opacity: 1;
    transform: translateY(-2px);
  }
  
  .whatsapp-button {
    filter: drop-shadow(0 4px 12px rgba(34, 197, 94, 0.3));
  }
  
  .whatsapp-button:hover {
    filter: drop-shadow(0 6px 20px rgba(34, 197, 94, 0.4));
  }
  
  /* Custom pulse animation for Cleanstar */
  @keyframes cleanstar-pulse {
    0%, 100% { 
      transform: scale(1);
      opacity: 0.9;
    }
    25% {
      transform: scale(1.05);
      opacity: 1;
    }
    50% { 
      transform: scale(1.1);
      opacity: 1;
    }
    75% {
      transform: scale(1.05);
      opacity: 1;
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .whatsapp-float {
      bottom: 24px;
      right: 20px;
    }
    
    /* Ensure tooltip stays visible on tablets */
    .whatsapp-tooltip {
      right: -4px;
    }
  }
  
  @media (max-width: 480px) {
    .whatsapp-float {
      bottom: 20px;
      right: 16px;
    }
    
    .whatsapp-button {
      width: 56px;
      height: 56px;
    }
    
    .whatsapp-button svg {
      width: 26px;
      height: 26px;
    }
    
    .whatsapp-tooltip {
      right: -12px;
      bottom: calc(100% + 12px);
      max-width: 280px;
    }
    
    .whatsapp-tooltip > div {
      padding: 10px 12px;
      font-size: 12px;
    }
    
    .whatsapp-tooltip .text-[10px] {
      font-size: 10px !important;
    }
  }
  
  /* Better positioning for very small screens */
  @media (max-width: 360px) {
    .whatsapp-float {
      bottom: 16px;
      right: 12px;
    }
    
    .whatsapp-button {
      width: 52px;
      height: 52px;
    }
    
    .whatsapp-button svg {
      width: 24px;
      height: 24px;
    }
    
    .whatsapp-tooltip {
      right: -8px;
      bottom: calc(100% + 8px);
      max-width: 250px;
    }
    
    .whatsapp-tooltip > div {
      padding: 8px 10px;
      font-size: 11px;
    }
  }
  
  /* Landscape phones - prevent obstruction */
  @media (max-width: 640px) and (max-height: 400px) and (orientation: landscape) {
    .whatsapp-float {
      bottom: 12px;
      right: 12px;
    }
    
    .whatsapp-button {
      width: 48px;
      height: 48px;
    }
    
    .whatsapp-button svg {
      width: 22px;
      height: 22px;
    }
    
    /* Hide tooltip in landscape to save space */
    .whatsapp-tooltip {
      display: none;
    }
  }
  
  /* Ensure it doesn't interfere with cookie banners or other floating elements */
  .whatsapp-float {
    margin-bottom: env(safe-area-inset-bottom, 0);
  }
</style>
