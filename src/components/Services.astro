---
---

<section id="servicios" class="py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 50% 50%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 services-header">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 services-title text-white">
        Nuestros <span style="color: var(--color1)" class="font-bold">Servicios</span>
      </h2>
      <p class="text-xl max-w-2xl mx-auto services-subtitle" style="color: var(--color6)">
        Ofrecemos una gama completa de servicios de 
        <span style="color: var(--color3)" class="font-semibold">detailing profesional</span> 
        para mantener tu vehículo en 
        <span style="color: var(--color4)" class="font-semibold">perfectas condiciones</span>
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      
      <!-- Service 1: Wash & Go -->
      <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 service-card animate-on-scroll">
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4 service-icon" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color4) 100%)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold service-name" style="color: var(--color4)">
                Detailing <span style="color: var(--color1)">Básico</span>
              </h3>
              <p class="text-gray-500 font-medium">Wash & Go</p>
            </div>
          </div>
          <p class="text-gray-600 mb-6 service-description">
            Ideal para un <span style="color: var(--color3)" class="font-semibold">mantenimiento regular</span> 
            que deja tu auto <span style="color: var(--color4)" class="font-semibold">impecable</span>.
          </p>
          <ul class="space-y-3 text-gray-600 service-features">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Lavado exterior <span style="color: var(--color3)" class="font-semibold">detallado</span> con shampoo pH neutro
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Aspirado <span style="color: var(--color4)" class="font-semibold">minucioso</span> de interior
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span style="color: var(--color1)" class="font-semibold">Renovador</span> de neumáticos
            </li>
          </ul>
        </div>
      </div>

      <!-- Service 2: Star Plus -->
      <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 animate-on-scroll">
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background: linear-gradient(135deg, var(--color2) 0%, var(--color3) 100%)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold" style="color: var(--color4)">
                Limpieza <span style="color: var(--color2)">Profunda</span>
              </h3>
              <p class="text-gray-500 font-medium">Star Plus</p>
            </div>
          </div>
          <p class="text-gray-600 mb-6">
            Un servicio <span style="color: var(--color3)" class="font-semibold">completo</span> para 
            <span style="color: var(--color4)" class="font-semibold">revitalizar</span> el interior y exterior de tu vehículo.
          </p>
          <ul class="space-y-3 text-gray-600">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Lavado exterior <span style="color: var(--color3)" class="font-semibold">detallado</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Aspirado y <span style="color: var(--color4)" class="font-semibold">desinfección minuciosa</span> del interior
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Limpieza <span style="color: var(--color1)" class="font-semibold">profunda de tapiz</span> (cielo, asientos, suelo)
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Aplicación de <span style="color: var(--color3)" class="font-semibold">renovador de plásticos</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span style="color: var(--color4)" class="font-semibold">Renovador</span> de neumáticos
            </li>
          </ul>
        </div>
      </div>

      <!-- Service 3: Glow Star -->
      <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 animate-on-scroll">
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background: linear-gradient(135deg, var(--color3) 0%, var(--color1) 100%)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold" style="color: var(--color4)">
                Restauración de <span style="color: var(--color3)">Pintura</span>
              </h3>
              <p class="text-gray-500 font-medium">Glow Star</p>
            </div>
          </div>
          <p class="text-gray-600 mb-6">
            Perfecto para <span style="color: var(--color1)" class="font-semibold">corregir imperfecciones</span> y 
            devolverle el <span style="color: var(--color4)" class="font-semibold">máximo brillo</span> a la pintura.
          </p>
          <ul class="space-y-3 text-gray-600">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Incluye todos los beneficios del servicio <span style="color: var(--color3)" class="font-semibold">Star Plus</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span style="color: var(--color4)" class="font-semibold">Corrección de rayas</span> en la pintura
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: var(--color2)" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Aplicación de <span style="color: var(--color1)" class="font-semibold">cera</span> para acabado 
              <span style="color: var(--color3)" class="font-semibold">brillante y protegido</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Service 4: Premium Ceramic - TARJETA PRINCIPAL -->
      <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 animate-on-scroll text-white border-2" style="border-color: var(--color1); transform: scale(1.02);">
        <div class="p-8 relative">
          <!-- Badge de servicio principal -->
          <div class="absolute top-4 right-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-black px-3 py-1 rounded-full text-xs font-bold">
            PRINCIPAL
          </div>
          
          <div class="flex items-center mb-4">
            <div class="w-14 h-14 rounded-full flex items-center justify-center mr-4" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color2) 100%)">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-white">
                Protección <span style="color: var(--color1)">Avanzada</span>
              </h3>
              <p class="font-medium" style="color: var(--color2)">Tratamientos Cerámicos</p>
            </div>
          </div>
          <p class="text-gray-300 mb-6 text-lg">
            Nuestros tratamientos cerámicos ofrecen una capa de 
            <span style="color: var(--color1)" class="font-semibold">protección duradera</span> con 
            <span style="color: var(--color2)" class="font-semibold">filtro UV</span> y alta 
            <span style="color: var(--color3)" class="font-semibold">resistencia</span>.
          </p>
          
          <!-- Gold Service -->
          <div class="mb-6 p-4 bg-white/10 rounded-lg border" style="border-color: var(--color3);">
            <h4 class="font-bold mb-2" style="color: var(--color1)">Servicio "Gold" - 24 meses</h4>
            <ul class="space-y-2 text-sm text-gray-300">
              <li>• Lavado con <span style="color: var(--color1)" class="font-semibold">Snowfoam</span> y técnica de 2 baldes</li>
              <li>• <span style="color: var(--color2)" class="font-semibold">Pulido profesional</span> en 3 pasos</li>
              <li>• Descontaminación <span style="color: var(--color3)" class="font-semibold">férrica de llantas</span></li>
              <li>• Sellador cerámico con <span style="color: var(--color1)" class="font-semibold">protección por 24 meses</span></li>
            </ul>
          </div>

          <!-- Platinum Service -->
          <div class="p-4 bg-white/10 rounded-lg border" style="border-color: var(--color4);">
            <h4 class="font-bold mb-2" style="color: var(--color2)">Servicio "Platinum" - 5 años</h4>
            <ul class="space-y-2 text-sm text-gray-300">
              <li>• Lavado con <span style="color: var(--color1)" class="font-semibold">Snowfoam</span> y técnica de 2 baldes</li>
              <li>• <span style="color: var(--color2)" class="font-semibold">Pulido profesional</span> en 3 pasos</li>
              <li>• Descontaminación <span style="color: var(--color3)" class="font-semibold">férrica de llantas</span></li>
              <li>• Sellador cerámico <span style="color: var(--color4)" class="font-semibold">premium por 5 años</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12 services-cta">
      <a 
        href="#contacto" 
        class="inline-block px-8 py-4 rounded-lg text-lg font-semibold text-white transition-all duration-300 transform hover:scale-105 shadow-lg cta-button"
        style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%)"
      >
        Solicitar Cotización
      </a>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Services section header animation
    const servicesTl = gsap.timeline({
      scrollTrigger: {
        trigger: '#servicios',
        start: 'top 80%',
        end: 'top 20%',
        toggleActions: 'play none none reverse'
      }
    });

    servicesTl.fromTo('.services-title', 
      { opacity: 0, y: 50, scale: 0.9 },
      { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: "power2.out" }
    )
    .fromTo('.services-subtitle', 
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.6, ease: "power2.out" }, "-=0.4"
    );

    // Service cards animation with enhanced stagger and effects
    gsap.fromTo('.service-card', 
      { 
        opacity: 0, 
        y: 100, 
        scale: 0.7,
        rotationY: 25,
        rotationX: 15 
      },
      { 
        opacity: 1, 
        y: 0, 
        scale: 1,
        rotationY: 0,
        rotationX: 0, 
        duration: 1.2, 
        ease: "elastic.out(1, 0.75)",
        stagger: {
          amount: 0.8,
          from: "start"
        },
        scrollTrigger: {
          trigger: '.service-card',
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    // Enhanced service card hover animations
    gsap.utils.toArray('.service-card').forEach((card: any, index: number) => {
      const cardElement = card as HTMLElement;
      const icon = cardElement.querySelector('.service-icon');
      const name = cardElement.querySelector('.service-name');
      const isPremium = cardElement.classList.contains('text-white');
      
      cardElement.addEventListener('mouseenter', () => {
        const tl = gsap.timeline();
        
        tl.to(card, { 
          y: -15, 
          scale: 1.03,
          rotationX: 5,
          boxShadow: "0 25px 50px rgba(0,0,0,0.3)",
          duration: 0.4, 
          ease: "power3.out" 
        })
        .to(icon, { 
          scale: 1.3, 
          rotation: isPremium ? 720 : 360, 
          duration: 0.6, 
          ease: "back.out(2)" 
        }, "-=0.3")
        .to(name, { 
          scale: 1.08, 
          color: isPremium ? "#ffffff" : "var(--color1)",
          duration: 0.3, 
          ease: "power2.out" 
        }, "-=0.4");
      });
      
      cardElement.addEventListener('mouseleave', () => {
        const tl = gsap.timeline();
        
        tl.to(card, { 
          y: 0, 
          scale: isPremium ? 1.02 : 1,
          rotationX: 0,
          boxShadow: isPremium ? "0 20px 40px rgba(0,0,0,0.2)" : "0 4px 6px rgba(0,0,0,0.1)",
          duration: 0.4, 
          ease: "power3.out" 
        })
        .to(icon, { 
          scale: isPremium ? 1.1 : 1, 
          rotation: 0, 
          duration: 0.4, 
          ease: "power2.out" 
        }, "-=0.3")
        .to(name, { 
          scale: 1, 
          color: "var(--color4)",
          duration: 0.3, 
          ease: "power2.out" 
        }, "-=0.3");
      });
    });

    // Animate service features with enhanced effects
    gsap.utils.toArray('.service-features li').forEach((item: any, index: number) => {
      gsap.fromTo(item, 
        { 
          opacity: 0, 
          x: -50,
          scale: 0.8 
        },
        { 
          opacity: 1, 
          x: 0, 
          scale: 1,
          duration: 0.8, 
          delay: index * 0.15,
          ease: "back.out(1.7)",
          scrollTrigger: {
            trigger: item,
            start: 'top 90%',
            toggleActions: 'play none none reverse'
          }
        }
      );
    });

    // Enhanced CTA button animation with breathing effect
    gsap.fromTo('.services-cta', 
      { 
        opacity: 0, 
        y: 60, 
        scale: 0.7,
        rotationX: 45
      },
      { 
        opacity: 1, 
        y: 0, 
        scale: 1, 
        rotationX: 0,
        duration: 1, 
        ease: "elastic.out(1, 0.8)",
        scrollTrigger: {
          trigger: '.services-cta',
          start: 'top 90%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    // Breathing animation for CTA button
    gsap.to('.services-cta .cta-button', {
      scale: 1.02,
      duration: 2,
      yoyo: true,
      repeat: -1,
      ease: "power2.inOut"
    });

    // Enhanced CTA button hover effect
    const ctaButton = document.querySelector('.services-cta .cta-button');
    if (ctaButton) {
      ctaButton.addEventListener('mouseenter', () => {
        gsap.to(ctaButton, { 
          scale: 1.12, 
          rotationX: 8,
          rotationY: 5,
          boxShadow: "0 15px 30px rgba(0,0,0,0.4)",
          duration: 0.4, 
          ease: "back.out(1.7)" 
        });
      });
      
      ctaButton.addEventListener('mouseleave', () => {
        gsap.to(ctaButton, { 
          scale: 1.02, 
          rotationX: 0,
          rotationY: 0,
          boxShadow: "0 4px 6px rgba(0,0,0,0.1)",
          duration: 0.3, 
          ease: "power2.out" 
        });
      });
    }

    // Parallax effect for service icons
    gsap.utils.toArray('.service-icon').forEach((icon: any) => {
      gsap.to(icon, {
        y: -15,
        ease: "none",
        scrollTrigger: {
          trigger: icon,
          start: "top bottom",
          end: "bottom top",
          scrub: true
        }
      });
    });
  });
</script>
