---
import AnimationProvider from './AnimationProvider.astro';
import { Droplets, Sparkles, Brush, Star } from 'lucide-astro';
---

<section id="servicios" class="py-20 relative overflow-hidden" data-aos-section="services">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 50% 50%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 services-header">
      <AnimationProvider animation="fade-up" delay={100} duration={800}>
        <h2 class="text-3xl md:text-4xl font-bold mb-4 services-title text-white">
          Nuestros <span style="color: var(--color1)" class="font-bold">Servicios</span>
        </h2>
      </AnimationProvider>
      
      <AnimationProvider animation="fade-up" delay={200} duration={800}>
        <p class="text-xl max-w-2xl mx-auto services-subtitle" style="color: var(--color6)">
          Ofrecemos una gama completa de servicios de 
          <span style="color: var(--color3)" class="font-semibold">detailing profesional</span> 
          para mantener tu vehículo en 
          <span style="color: var(--color4)" class="font-semibold">perfectas condiciones</span>
        </p>
      </AnimationProvider>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 items-stretch">
      
      <!-- Service 1: Detailing Básico -->
      <AnimationProvider animation="fade-up" delay={300} duration={700}>
        <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 service-card text-white border h-full flex flex-col" style="border-color: var(--color3);">
          <div class="p-6 flex-1 flex flex-col">
            <div class="flex items-center mb-3">
              <div class="w-14 h-14 rounded-full flex items-center justify-center mr-4 service-icon" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color4) 100%)">
                <Droplets size={28} class="text-white" />
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white">
                  Detailing <span style="color: var(--color1)">Básico</span>
                </h3>
                <p class="font-medium text-base" style="color: var(--color2)">Wash & Go</p>
              </div>
            </div>
            <p class="text-gray-300 mb-4 text-lg">
              Ideal para un <span style="color: var(--color1)" class="font-semibold">mantenimiento regular</span> 
              que deja tu auto <span style="color: var(--color2)" class="font-semibold">impecable</span>.
            </p>
            
            <!-- Lista de servicios incluidos -->
            <div class="space-y-2 flex-1">
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color1)" class="font-semibold">Lavado exterior detallado</span> 
                  con shampoo pH neutro
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color2)" class="font-semibold">Aspirado minucioso</span> 
                  de interior
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color3)" class="font-semibold">Renovador</span> 
                  de neumáticos
                </span>
              </div>
            </div>
            
            <!-- Botón Cotizar Servicio -->
            <div class="mt-6 pt-4 border-t border-gray-700">
              <a 
                href="#contacto"
                class="w-full inline-block text-center px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
                style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%); color: white;"
              >
                Cotizar Servicio
              </a>
            </div>
          </div>
        </div>
      </AnimationProvider>

      <!-- Service 2: Limpieza Profunda -->
      <AnimationProvider animation="fade-up" delay={400} duration={700}>
        <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 service-card text-white border h-full flex flex-col" style="border-color: var(--color3);">
          <div class="p-6 flex-1 flex flex-col">
            <div class="flex items-center mb-3">
              <div class="w-14 h-14 rounded-full flex items-center justify-center mr-4 service-icon" style="background: linear-gradient(135deg, var(--color4) 0%, var(--color2) 100%)">
                <Sparkles size={28} class="text-white" />
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white">
                  Limpieza <span style="color: var(--color1)">Profunda</span>
                </h3>
                <p class="font-medium text-base" style="color: var(--color2)">Star Plus</p>
              </div>
            </div>
            <p class="text-gray-300 mb-4 text-lg">
              Un servicio <span style="color: var(--color1)" class="font-semibold">completo</span> para 
              <span style="color: var(--color2)" class="font-semibold">revitalizar</span> el interior y exterior de tu vehículo.
            </p>
            
            <!-- Lista de servicios incluidos -->
            <div class="space-y-2 flex-1">
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color1)" class="font-semibold">Lavado exterior detallado</span>
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color2)" class="font-semibold">Aspirado y desinfección minuciosa</span> 
                  del interior
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color3)" class="font-semibold">Limpieza profunda de tapiz</span> 
                  (cielo, asientos, suelo)
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  Aplicación de <span style="color: var(--color1)" class="font-semibold">renovador de plásticos</span>
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color2)" class="font-semibold">Renovador</span> 
                  de neumáticos
                </span>
              </div>
            </div>
            
            <!-- Botón Cotizar Servicio -->
            <div class="mt-6 pt-4 border-t border-gray-700">
              <a 
                href="#contacto"
                class="w-full inline-block text-center px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
                style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%); color: white;"
              >
                Cotizar Servicio
              </a>
            </div>
          </div>
        </div>
      </AnimationProvider>

      <!-- Service 3: Restauración de Pintura -->
      <AnimationProvider animation="fade-up" delay={500} duration={700}>
        <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 service-card text-white border h-full flex flex-col" style="border-color: var(--color3);">
          <div class="p-6 flex-1 flex flex-col">
            <div class="flex items-center mb-3">
              <div class="w-14 h-14 rounded-full flex items-center justify-center mr-4 service-icon" style="background: linear-gradient(135deg, var(--color3) 0%, var(--color1) 100%)">
                <Brush size={28} class="text-white" />
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white">
                  Restauración de <span style="color: var(--color1)">Pintura</span>
                </h3>
                <p class="font-medium text-base" style="color: var(--color2)">Glow Star</p>
              </div>
            </div>
            <p class="text-gray-300 mb-4 text-lg">
              Perfecto para <span style="color: var(--color1)" class="font-semibold">corregir imperfecciones</span> y 
              devolverle el <span style="color: var(--color2)" class="font-semibold">máximo brillo</span> a la pintura.
            </p>
            
            <!-- Lista de servicios incluidos -->
            <div class="space-y-2 flex-1">
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  Incluye todos los beneficios del servicio 
                  <span style="color: var(--color1)" class="font-semibold">Star Plus</span>
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  <span style="color: var(--color2)" class="font-semibold">Corrección de rayas</span> 
                  en la pintura
                </span>
              </div>
              <div class="flex items-start">
                <span class="text-green-400 mr-2 text-base">•</span>
                <span class="text-gray-300 text-base">
                  Aplicación de <span style="color: var(--color3)" class="font-semibold">cera</span> 
                  para acabado brillante y protegido
                </span>
              </div>
            </div>
            
            <!-- Botón Cotizar Servicio -->
            <div class="mt-6 pt-4 border-t border-gray-700">
              <a 
                href="#contacto"
                class="w-full inline-block text-center px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
                style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%); color: white;"
              >
                Cotizar Servicio
              </a>
            </div>
          </div>
        </div>
      </AnimationProvider>

      <!-- Service 4: Protección Cerámica - TARJETA PRINCIPAL -->
      <AnimationProvider animation="fade-up" delay={600} duration={700}>
        <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 service-card text-white border-2 h-full flex flex-col" style="border-color: var(--color1);">
          <div class="p-6 relative flex-1 flex flex-col">
            <!-- Badge de servicio principal -->
            <div class="absolute top-2 right-2 bg-gradient-to-r from-yellow-400 to-yellow-500 text-black px-2 py-1 rounded-full text-xs font-bold">
              PRINCIPAL
            </div>
            
            <div class="flex items-center mb-3">
              <div class="w-14 h-14 rounded-full flex items-center justify-center mr-4 service-icon" style="background: linear-gradient(135deg, var(--color1) 0%, var(--color2) 100%)">
                <Star size={28} class="text-white" fill="currentColor" />
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white">
                  <span class="bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-600 bg-clip-text text-transparent font-extrabold">Protección Avanzada</span>
                </h3>
                <p class="font-medium text-base" style="color: var(--color2)">Tratamientos Cerámicos</p>
              </div>
            </div>
            <p class="text-gray-300 mb-4 text-lg">
              Nuestros tratamientos cerámicos ofrecen una capa de 
              <span style="color: var(--color1)" class="font-semibold">protección duradera</span> con 
              <span style="color: var(--color2)" class="font-semibold">filtro UV</span> y alta 
              <span style="color: var(--color3)" class="font-semibold">resistencia</span>.
            </p>
            
            <!-- Services Container -->
            <div class="space-y-3 flex-1">
              <!-- Gold Service -->
              <div class="p-3 bg-white/10 rounded-lg border" style="border-color: var(--color3);">
                <h4 class="font-bold mb-2 text-base" style="color: var(--color1)">Servicio "Gold" - 24 meses</h4>
                <ul class="space-y-1 text-sm text-gray-300">
                  <li>• Lavado con <span style="color: var(--color1)" class="font-semibold">Snowfoam</span> y técnica de 2 baldes</li>
                  <li>• <span style="color: var(--color2)" class="font-semibold">Pulido profesional</span> en 3 pasos</li>
                  <li>• Descontaminación <span style="color: var(--color3)" class="font-semibold">férrica de llantas</span></li>
                  <li>• Sellador cerámico con <span style="color: var(--color1)" class="font-semibold">protección por 24 meses</span></li>
                </ul>
              </div>

              <!-- Platinum Service -->
              <div class="p-3 bg-white/10 rounded-lg border" style="border-color: var(--color4);">
                <h4 class="font-bold mb-2 text-base" style="color: var(--color2)">Servicio "Platinum" - 5 años</h4>
                <ul class="space-y-1 text-sm text-gray-300">
                  <li>• Lavado con <span style="color: var(--color1)" class="font-semibold">Snowfoam</span> y técnica de 2 baldes</li>
                  <li>• <span style="color: var(--color2)" class="font-semibold">Pulido profesional</span> en 3 pasos</li>
                  <li>• Descontaminación <span style="color: var(--color3)" class="font-semibold">férrica de llantas</span></li>
                  <li>• Sellador cerámico <span style="color: var(--color4)" class="font-semibold">premium por 5 años</span></li>
                </ul>
              </div>
            </div>
            
            <!-- Botón Cotizar Servicio -->
            <div class="mt-6 pt-4 border-t border-gray-700">
              <a 
                href="#contacto"
                class="w-full inline-block text-center px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
                style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%); color: white;"
              >
                Cotizar Servicio
              </a>
            </div>
          </div>
        </div>
      </AnimationProvider>

    </div>

    <!-- Custom Services CTA -->
    <AnimationProvider animation="fade-up" delay={700} duration={800}>
      <div class="text-center mt-16 p-8 rounded-2xl border" style="background: linear-gradient(135deg, rgba(75, 85, 99, 0.3) 0%, rgba(55, 65, 81, 0.4) 100%); border-color: var(--color3);">
        <h3 class="text-2xl font-bold mb-4 text-white">
          ¿No encuentras lo que <span style="color: var(--color1)">buscas</span>?
        </h3>
        <p class="text-lg mb-6 text-gray-300 max-w-2xl mx-auto">
          Conversemos sobre tu <span style="color: var(--color2)" class="font-semibold">necesidad especifica</span>. 
          Cada vehículo es único y merece un <span style="color: var(--color3)" class="font-semibold">tratamiento personalizado</span>.
        </p>
        <a 
          href="https://wa.me/56947346095?text=Hola%20Cleanstar%20Detailing,%20me%20interesa%20una%20reserva%20personalizada%20para%20mi%20vehículo.%20¿Podrían%20ayudarme?"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl text-white"
          style="background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.785"/>
          </svg>
          Reserva Personalizada
        </a>
      </div>
    </AnimationProvider>
  </div>
</section>

<style>
.service-card {
  transition: all 0.3s ease;
}

.service-card:hover {
  transform: translateY(-5px);
}

.service-icon {
  transition: transform 0.3s ease;
}

.service-icon:hover {
  transform: scale(1.1);
}

/* Hover effects para botones */
.cta-button:hover {
  transform: scale(1.05);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .services-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}
</style>
