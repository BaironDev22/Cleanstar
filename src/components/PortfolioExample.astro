---
// Ejemplo de cómo usar las imágenes en un componente
import OptimizedImage from './OptimizedImage.astro';
import Gallery from './Gallery.astro';
import { galleryImages, serviceImages } from '../utils/imageConfig';
---

<section class="portfolio-section py-16 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 30% 70%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    
    <!-- Imagen individual optimizada -->
    <div class="hero-image-container mb-16">
      <OptimizedImage
        src="../assets/images/hero/hero-main.webp"
        alt="Auto deportivo con acabado perfecto"
        width={1200}
        height={600}
        class="hero-image rounded-lg shadow-2xl"
        loading="eager"
      />
    </div>

    <!-- Galería completa con filtros -->
    <Gallery 
      images={galleryImages}
      title="Nuestros Trabajos"
      showFilters={true}
      columns={3}
    />

    <!-- Galería de servicios sin filtros -->
    <div class="mt-16">
      <Gallery 
        images={serviceImages}
        title="Nuestros Servicios"
        showFilters={false}
        columns={2}
      />
    </div>

  </div>
</section>

<style>
.portfolio-section {
  background: linear-gradient(135deg, rgba(15, 15, 15, 0.95) 0%, rgba(25, 25, 25, 0.95) 100%);
}

.hero-image-container {
  position: relative;
  overflow: hidden;
  border-radius: 16px;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
}

.hero-image-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: 1;
}

.hero-image-container:hover::before {
  opacity: 1;
}
</style>
