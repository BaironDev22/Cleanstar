<section id="testimonios" class="py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 50% 80%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <AnimationProvider animation="fade-up" delay={0}>
      <div class="text-center mb-16 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
          ¿Qué dicen nuestros <span style="color: var(--color1)">clientes</span>?
        </h2>
        <p class="text-xl max-w-2xl mx-auto" style="color: var(--color6)">
          La <span style="color: var(--color4)" class="font-semibold">satisfacción</span> de nuestros clientes 
          es nuestra mejor <span style="color: var(--color3)" class="font-semibold">carta de presentación</span>
        </p>
      </div>
    </AnimationProvider>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      
