---
// Hero Component con AOS - Versión migrada
import AnimationProvider from './AnimationProvider.astro';
import heroImage1 from '../assets/images/hero/IMG_2099.webp';
import heroImage2 from '../assets/images/hero/IMG_2263.webp';
---

<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden pt-2 md:pt-4" id="inicio" data-aos-section="hero">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>
  
  <!-- Hero Container -->
  <div class="hero-container max-w-7xl mx-auto px-4 py-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      
      <!-- Left Column - Content -->
      <div class="hero-content space-y-8">
        <!-- Main Title -->
        <div class="hero-title-container">
          <h1 class="hero-title text-5xl lg:text-7xl font-bold leading-tight">
            <AnimationProvider animation="fade-up" delay={100} duration={600}>
              <span class="block hero-title-line-1 text-gray-300">Cleanstar</span>
            </AnimationProvider>
            
            <AnimationProvider animation="fade-up" delay={200} duration={600}>
              <span class="block hero-title-line-2 text-white">Detailing</span>
            </AnimationProvider>
            
            <AnimationProvider animation="fade-up" delay={300} duration={600}>
              <span class="block hero-title-line-3 text-3xl lg:text-4xl font-normal mt-2 text-gray-400">
                Perfección en cada detalle
              </span>
            </AnimationProvider>
          </h1>
        </div>

        <!-- Subtitle -->
        <AnimationProvider animation="fade-up" delay={400} duration={700}>
          <div class="hero-subtitle-container">
            <p class="hero-subtitle text-xl lg:text-2xl leading-relaxed max-w-xl text-white">
              Transformamos tu vehículo con servicios profesionales de 
              <span class="font-semibold text-gray-300">detailing automotriz</span> 
              y <span class="font-semibold text-gray-400">tratamientos cerámicos</span> 
              de última generación.
            </p>
          </div>
        </AnimationProvider>

        <!-- Features List -->
        <div class="hero-features space-y-4">
          <AnimationProvider animation="fade-up" delay={500} duration={800}>
            <div class="feature-item flex items-center space-x-3">
              <div class="feature-icon w-6 h-6 rounded-full flex items-center justify-center bg-gradient-to-r from-gray-600 to-gray-700">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-lg text-gray-300">Protección cerámica de hasta 5 años</span>
            </div>
          </AnimationProvider>
          
          <AnimationProvider animation="fade-up" delay={600} duration={800}>
            <div class="feature-item flex items-center space-x-3">
              <div class="feature-icon w-6 h-6 rounded-full flex items-center justify-center bg-gradient-to-r from-gray-600 to-gray-700">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-lg text-gray-300">Productos premium de calidad mundial</span>
            </div>
          </AnimationProvider>
          
          <AnimationProvider animation="fade-up" delay={700} duration={800}>
            <div class="feature-item flex items-center space-x-3">
              <div class="feature-icon w-6 h-6 rounded-full flex items-center justify-center bg-gradient-to-r from-gray-600 to-gray-700">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-lg text-gray-300">Servicio a domicilio en Villa Alemana</span>
            </div>
          </AnimationProvider>
        </div>

        <!-- CTA Buttons -->
        <div class="hero-cta space-y-4 sm:space-y-0 sm:space-x-6 sm:flex">
          <AnimationProvider animation="zoom-in" delay={1100} duration={600} easing="ease-out-back">
            <a 
              href="#contacto"
              class="cta-primary inline-block px-8 py-4 rounded-full font-bold text-lg text-white transition-all duration-300 transform hover:scale-105 hover:shadow-xl bg-gradient-to-r from-gray-600 to-gray-800 hover:from-gray-500 hover:to-gray-700"
            >
              Solicitar Cotización
            </a>
          </AnimationProvider>
          
          <AnimationProvider animation="zoom-in" delay={1200} duration={600} easing="ease-out-back">
            <a 
              href="https://wa.me/56944587750"
              target="_blank"
              class="cta-secondary inline-block px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 transform hover:scale-105 border-2"
              style="color: var(--color1); border-color: var(--color1)"
            >
              WhatsApp Directo
            </a>
          </AnimationProvider>
        </div>

        <!-- Social Proof -->
        <AnimationProvider animation="fade-up" delay={1300} duration={600}>
          <div class="hero-social-proof">
            <div class="flex items-center space-x-6 pt-8">
              <div class="stat-item text-center">
                <div class="stat-number text-3xl font-bold" style="color: var(--color4)">500+</div>
                <div class="stat-label text-sm" style="color: var(--color2)">Autos Detallados</div>
              </div>
              <div class="stat-divider w-px h-12 opacity-30" style="background-color: var(--color2)"></div>
              <div class="stat-item text-center">
                <div class="stat-number text-3xl font-bold" style="color: var(--color4)">5★</div>
                <div class="stat-label text-sm" style="color: var(--color2)">Calificación</div>
              </div>
              <div class="stat-divider w-px h-12 opacity-30" style="background-color: var(--color2)"></div>
              <div class="stat-item text-center">
                <div class="stat-number text-3xl font-bold" style="color: var(--color4)">3+</div>
                <div class="stat-label text-sm" style="color: var(--color2)">Años Experiencia</div>
              </div>
            </div>
          </div>
        </AnimationProvider>
      </div>

      <!-- Right Column - Images -->
      <div class="hero-images-container relative">
        <!-- Image Grid -->
        <div class="images-grid grid grid-cols-2 gap-6 h-[500px]">
          
          <!-- First Image - Proceso -->
          <AnimationProvider animation="fade-left" delay={600} duration={800}>
            <div class="image-wrapper-1 relative overflow-hidden rounded-2xl shadow-2xl">
              <div class="image-container h-full">
                <img
                  src={heroImage1.src}
                  alt="Proceso de detailing automotriz profesional en acción"
                  width="300"
                  height="700"
                  class="hero-image-1 w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            </div>
          </AnimationProvider>

          <!-- Second Image - Resultado -->
          <AnimationProvider animation="fade-left" delay={800} duration={800}>
            <div class="image-wrapper-2 relative overflow-hidden rounded-2xl shadow-2xl mt-16">
              <div class="image-container h-full">
                <img
                  src={heroImage2.src}
                  alt="Resultado final de detailing con acabado perfecto"
                  width="300"
                  height="700"
                  class="hero-image-2 w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            </div>
          </AnimationProvider>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Servicios - Debajo del Hero con menos espacio -->
<div class="w-full py-4 flex justify-center">
  <AnimationProvider animation="fade-up" delay={800} duration={600}>
    <a 
      href="#servicios" 
      class="cta-nuevo group inline-flex items-center gap-3 px-8 py-4 rounded-full transition-all duration-300 hover:scale-105 hover:shadow-xl"
      style="background: linear-gradient(135deg, var(--color4) 0%, var(--color3) 100%); border: 1px solid var(--color3);"
    >
      <span class="font-semibold text-lg" style="color: var(--color1);">
        Descubre Nuestros Servicios
      </span>
      
      <div class="flex items-center justify-center w-8 h-8 rounded-full transition-transform duration-300 group-hover:translate-x-1" 
           style="background: var(--color2);">
        <svg class="w-4 h-4" style="color: var(--color5);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    </a>
  </AnimationProvider>
</div>

<style>
.hero-section {
  perspective: 1000px;
}

.images-grid {
  perspective: 1000px;
}

.image-wrapper-1,
.image-wrapper-2 {
  position: relative;
  transition: transform 0.3s ease;
}

.image-container {
  overflow: hidden;
  border-radius: 1rem;
  position: relative;
}

.hero-image-1,
.hero-image-2 {
  transition: transform 0.5s ease;
  will-change: transform;
}

/* Features animation - fallback CSS */
.feature-item {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeUpFeature 0.8s ease-out forwards;
}

.feature-item:nth-child(1) {
  animation-delay: 0.5s;
}

.feature-item:nth-child(2) {
  animation-delay: 0.6s;
}

.feature-item:nth-child(3) {
  animation-delay: 0.7s;
}

@keyframes fadeUpFeature {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* CTA Servicios - Estilos nuevos */
.cta-nuevo {
  position: relative;
  overflow: hidden;
}

.cta-nuevo::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
  transition: left 0.5s;
}

.cta-nuevo:hover::before {
  left: 100%;
}

.stat-number {
  background: linear-gradient(135deg, var(--color4), var(--color3));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Hover effects para botones */
.cta-primary:hover,
.cta-secondary:hover {
  transform: scale(1.05);
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .images-grid {
    height: 400px;
  }
  
  .image-wrapper-2 {
    margin-top: 2rem;
  }
}

@media (max-width: 768px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .images-grid {
    height: 300px;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  
  .cta-nuevo {
    padding: 12px 24px;
    font-size: 0.9rem;
  }
  
  /* Animaciones más suaves en móvil */
  .feature-item {
    animation-duration: 0.5s;
  }
}
</style>
